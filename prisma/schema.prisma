generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Container {
  id String @id
}

model Course {
  id          String  @id @unique
  name        String
  code        String
  credits     Int
  terms       String
  description String  @db.Text
  schoolId    String
  partitionId String?
}

model Partition {
  id String @id
}

model School {
  id   String @id @unique
  name String
}

model User {
  id            String    @id @unique
  avatar        String
  email         String    @unique
  name          String
  billingActive Boolean   @default(false)
  billingDate   DateTime?
  createdAt     DateTime  @default(now())
  numUser       Int       @default(0)
  schoolId      String?
  admin         Boolean   @default(false)
  waitlist      Boolean   @default(false)
}

model ContainerToCourse {
  A String
  B String

  @@unique([A, B], map: "_ContainerToCourse_AB_unique")
  @@index([B], map: "_ContainerToCourse_B_index")
  @@map("_ContainerToCourse")
}

model ContainerToPartition {
  A String
  B String

  @@unique([A, B], map: "_ContainerToPartition_AB_unique")
  @@index([B], map: "_ContainerToPartition_B_index")
  @@map("_ContainerToPartition")
}

model PartitionToContainer {
  A String
  B String

  @@unique([A, B], map: "_PartitionToContainer_AB_unique")
  @@index([B], map: "_PartitionToContainer_B_index")
  @@map("_PartitionToContainer")
}

model user_emails {
  id    Int    @id @default(autoincrement())
  email String @db.VarChar(255)
}
